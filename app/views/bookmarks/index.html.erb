<div class="page-header">
  <h1>
    Bookmarks
    <a href="/bookmarks/new" class="btn btn-lg btn-success">New Bookmark</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => "collapse", :id => "bookmarks_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
  <%= f.label :movie_id, "Movie" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :movie_id_gteq, :class => "form-control", :placeholder => "Movie greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :movie_id_lteq, :class => "form-control", :placeholder => "Movie less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :user_id, "User" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :user_id_gteq, :class => "form-control", :placeholder => "User greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :user_id_lteq, :class => "form-control", :placeholder => "User less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
    <%= f.label :watched_eq, "Watched" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :watched_eq, "1", checked: ((params[:q] && params[:q][:watched_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :watched_eq, "0", checked: ((params[:q] && params[:q][:watched_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :watched_eq, ""%> Either
      </label>
    </div>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/bookmarks" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#bookmarks_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Movie</th>
        <th>Watched</th>
        <th>User</th>
        <th>Actions</th>
      </tr>

      <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= bookmark.movie_id %></td>
        <td><%= bookmark.watched %></td>
        <td><%= bookmark.user_id %></td>
        <td>
          <a href="/bookmarks/<%= bookmark.id %>" class="btn btn-primary">Show</a>
          <a href="/bookmarks/<%= bookmark.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_bookmark/<%= bookmark.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @bookmarks, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
